{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es5", "es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES5"
    },
    "exclude": ["node_modules"],
    "include": [
        "artifacts/**/*",
        "artifacts/**/*.json",
        "packages/contracts/deploy/**/*",
        "scripts/**/*",
        "tasks/**/*",
        "test/**/*",
        "typechain/**/*",
        "types/**/*",
        "packages/contracts/hardhat.config.ts",
        "test-sdk/sdk.ts"
    ],
    "references": [
        {
            "path": "../sdk"
        }
    ]
}
